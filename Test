-- 1. Tải thư viện từ file của bạn
local success, redzlib = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/Huylovemy/Bearhudz/refs/heads/main/Test_"))()
end)

if not success or not redzlib then
    warn("Lỗi: Không thể tải hoặc code trong file đang có lỗi cú pháp!")
    return
end

-- 2. Khởi tạo Window (Dùng pcall để tránh crash nếu theme QuangHuy bị lỗi)
local Window
local status, err = pcall(function()
    Window = redzlib:MakeWindow({
        "Huyzhud Hub", 
        "QuangHuy Theme", 
        "HuyzhudConfig.json"
    })
end)

if not status then
    warn("Lỗi khi tạo Window (có thể do Theme): " .. tostring(err))
    -- Nếu lỗi Theme, hãy thử ép về theme mặc định:
    redzlib:SetTheme("Dark") 
    Window = redzlib:MakeWindow({"Huyzhud Hub", "Sửa lỗi Theme", "Config.json"})
end

-- 3. Tạo Tab mẫu (Phải có tab thì giao diện mới hiện khung)
local Tab = Window:MakeTab({"Home", "home"})

Tab:AddSection("Giao diện đã hoạt động!")

Tab:AddButton({
    "Test Button",
    "Nếu thấy nút này là thành công",
    function()
        print("Clicked!")
    end
})
