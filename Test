local redzlib = loadstring(game:HttpGet("https://raw.githubusercontent.com/Huylovemy/Bearhudz/refs/heads/main/Test_"))()

-- Sau khi load thư viện xong, bạn phải gọi lệnh tạo Window thì giao diện mới hiện ra
local Window = redzlib:MakeWindow({
    "Huyzhud Hub",       -- Tên hiển thị chính
    "Phiên bản Test",    -- Tên hiển thị phụ
    "HuyzhudConfig.json" -- Tên file lưu cấu hình
})

-- Thêm ít nhất một Tab để giao diện không bị trống
local Tab = Window:MakeTab({
    "Trang Chủ", 
    "home"
})

Tab:AddSection("Chào mừng bạn!")

Tab:AddButton({
    "Thông báo",
    "Nhấn để kiểm tra hoạt động",
    function()
        print("Giao diện đã hoạt động!")
    end
})
