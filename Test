local redzlib = loadstring(game:HttpGet("https://raw.githubusercontent.com/Huylovemy/New/refs/heads/main/Huyzhud.txt"))()
local Window = redzlib:MakeWindow({
    Title = "Bearhub(Premium)",
    SubTitle = "by Quang Huy",
    SaveFolder = "HuyConfig.json"
})

-- 3. Tạo Tab chính
local MainTab = Window:MakeTab({
    Title = "Main Script",
    Icon = "rbxassetid://4483345998" -- Bạn có thể thay ID icon khác
})

-- 4. Thêm nút bấm để chạy Bearhub
MainTab:AddButton({
    Name = "Kích Hoạt Bearhub",
    Callback = function()
        -- Load script Bearhub từ link bạn đã cung cấp
        loadstring(game:HttpGet("https://luacrack.site/raw.php/Quanghuy/raw/Bearhub.lua"))()
        
        -- Thông báo nhỏ cho người dùng
        print("Bearhub Loaded!")
    end
})

-- 5. Thêm nút bấm để tắt Menu (Tùy chọn)
MainTab:AddButton({
    Name = "Destroy UI",
    Callback = function()
        redzlib:Destroy()
    end
})
